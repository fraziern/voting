{
    'plugins': [
      'react'
    ],
    'rules': {
        'indent': [
            1,
            2
        ],
        'quotes': [
            2,
            'single'
        ],
        'linebreak-style': [
            2,
            'unix'
        ],
        'semi': [
            2,
            'always'
        ],
        'no-console' : [
            0
        ],
        'comma-dangle' : [
            0
        ],
        'react/prop-types' : [
            0
        ],
        'react/prefer-stateless-function' : [
            0
        ]
    },
    'env': {
        'es6': true,
        'node': true,
        'mocha': true
    },
    'extends': 'eslint:recommended'
}
